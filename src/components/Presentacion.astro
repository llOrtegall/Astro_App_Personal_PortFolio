---
import SocialIcons from "../components/SocialIcons.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import Mail from "../components/icons/Mail.astro";
import Badge from "../components/ui/Badge.astro";
---

<div id="inicio">
    <!-- Título principal -->
    <h1
        class="text-white text-5xl md:text-6xl font-bold text-center pb-2 text-balance leading-tight"
    >
        Ivan Ortega Garzón
    </h1>

    <!-- Subtítulo profesional -->
    <h2 class="text-2xl md:text-3xl text-center text-gray-300 font-light">
        Desarrollador Full Stack
    </h2>

    <!-- Estado disponible -->
    <div class="flex justify-center mb-6">
        <a
            href="https://www.linkedin.com/in/llortegall/"
            target="_blank"
            class="inline-block hover:scale-105 transition-transform"
        >
            <Badge>✨ Disponible para nuevos proyectos</Badge>
        </a>
    </div>

    <!-- Propuesta de valor principal -->
    <p class="text-xl text-gray-200 max-w-2xl mx-auto mb-4 leading-relaxed text-pretty">
        Transformo ideas en aplicaciones robustas y escalables.
        <span class="text-blue-400 font-medium">2 años de experiencia</span>
        creando soluciones digitales que impactan positivamente a los usuarios. Especializado
        en <span class="text-red-400 font-semibold">NextJS</span>,
        <span class="text-blue-400 font-semibold">NodeJS</span>,
        <span class="text-green-400 font-semibold">TypeScript</span> y
        <span class="text-orange-400 font-semibold">SQL</span>
    </p>

    <!-- Enlaces sociales -->
    <nav class="flex justify-center">
        <ul class="flex gap-x-4 pt-6">
            <SocialIcons href="https://www.linkedin.com/in/llortegall/">
                <LinkedIn class="size-5" />
                <span class="mt-0.5">LinkedIn</span>
            </SocialIcons>
            <SocialIcons href="https://github.com/llOrtegall">
                <GitHub class="size-5" />
                <span class="mt-0.5">GitHub</span>
            </SocialIcons>
            <SocialIcons href="mailto:IvanOrtega_97@hotmail.com">
                <Mail class="size-5" />
                <span class="mt-0.5">Contacto</span>
            </SocialIcons>
        </ul>
    </nav>
</div>
