---
import GitHub from "../components/Icons/GitHub.astro";
import Carrousel from "./Carrousel.astro";
import Badge from "./Badge.astro";

const BodegaStock = [
  {
    title: "Bodega Stock Soporte",
    description:
      "Sistema integral de gestión y trazabilidad de activos empresariales que automatiza el control de inventarios, seguimiento de movimientos y generación de reportes analíticos para la optimización de recursos e insumos corporativos",
    img: ["/11.png", "/12.png", "/13.png", "/14.png"],
    url: "#",
    github: "https://github.com/llOrtegall/app-bodega-stock",
    tags: [
      "TypeScript",
      "React",
      "NodeJS",
      "Express",
      "MongoDB",
      "Docker",
      "Nginx",
    ],
  },
  {
    title: "Shopping Cart",
    description:
      "Aplicación de carrito de compras con funcionalidades de agregar, eliminar y modificar productos en tiempo real",
    img: ["/21.png", "/22.png", "/23.png"],
    url: "https://shoppingcartortega.netlify.app",
    github: "https://github.com/llOrtegall/React_App_Ecommerce",
    tags: ["TypeScript", "React", "API Platzi", "Tailwind CSS"],
  },
];
---

<section class="px-4">
  {
    BodegaStock.map((proyec) => (
      <div>
        <article class="flex flex-col">
          <h1 class="pb-3">
            <Badge>{proyec.title}</Badge>
          </h1>
          <p>{proyec.description}</p>

          <nav class="flex gap-4 pt-4">
            <a
              href={proyec.github}
              class="flex items-center gap-4 boder-2 border-gray-200 p-2 rounded-md"
            >
              <GitHub class="size-10" />
              <p>Codigo GitHub</p>
            </a>

            <div class="flex flex-wrap gap-2 items-center">
              <p>Tecnologías Utilizadas:</p>
              {proyec.tags.map((tag) => (
                <span class="text-yellow-600">{tag}</span>
              ))}
            </div>
          </nav>
        </article>
        <Carrousel imagenes={proyec.img} />
      </div>
    ))
  }
</section>
