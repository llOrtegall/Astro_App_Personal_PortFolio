---
interface Props {
  title: string;
  company: string;
  description: string;
  date: string;
  tecnologias: string[];
}
const { title, company, description, date, tecnologias } = Astro.props;
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white">
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400"
  >{date}</time
>
<h2 class="text-lg font-semibold text-gray-200">
  Empresa / Compañia : {company}
</h2>
<h3 class="text-lg font-semibold text-blue-500">
  {title}
</h3>
<p class="mb-4 text-wrap font-normal text-gray-500">
  {description}
</p>

<ul>
  <li>
    <span class="text-gray-200">Tecnologías Implementadas: </span>
    {tecnologias.map((tecnologia) => (
      <span class="text-yellow-400 px-2">{tecnologia}</span>
    ))}
  </li>
</ul>

