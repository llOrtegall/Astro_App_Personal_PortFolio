---
const PROJECTS = [
    {   
        id: 1,
        title: "Sistema de Gestión Empresarial",
        description: "Aplicación web completa para la gestión de procesos empresariales con dashboard interactivo, reportes en tiempo real y sistema de autenticación robusto.",
        link: "#",
        github: "#",
        image: "/images/project1.jpg",
        technologies: ["NextJS", "TypeScript", "NodeJS", "MySQL"],
        status: "En producción",
        featured: true,
    },
    {
        id: 2,
        title: "API REST Microservicios",
        description: "Arquitectura de microservicios escalable con contenedores Docker, implementación CI/CD y monitoreo con Grafana para alta disponibilidad.",
        link: "#",
        github: "#",
        image: "/images/project2.jpg",
        technologies: ["NodeJS", "Express", "Docker", "Jenkins"],
        status: "Completado",
        featured: true,
    }
];
---

  <h1 class="text-3xl font-bold text-center mb-8 text-gray-300">
    Proyectos Realizados
  </h1>
  <div class="space-y-6">
  {
      PROJECTS.map((project) => (
          <article class="group relative overflow-hidden rounded-xl border border-gray-700/50 bg-gray-800/50 backdrop-blur-sm transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:border-blue-500/30">
              
              <div class="absolute top-4 right-4 z-10">
                  <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                      project.status === 'En producción' 
                          ? 'bg-green-500/20 text-green-300 border border-green-500/30' 
                          : project.status === 'Completado'
                          ? 'bg-blue-500/20 text-blue-300 border border-blue-500/30'
                          : 'bg-orange-500/20 text-orange-300 border border-orange-500/30'
                  }`}>
                      {project.status}
                  </span>
              </div> 

              {project.featured && (
                  <div class="absolute top-4 left-4 z-10">
                      <span class="px-3 py-1 bg-gradient-to-r from-purple-500 to-pink-500 text-white text-xs font-medium rounded-full">
                          ⭐ Destacado
                      </span>
                  </div>
              )}

              <div class="grid md:grid-cols-2 min-h-[200px]">
                  
                  <div class="relative overflow-hidden h-48 md:h-auto bg-gradient-to-br from-gray-700 to-gray-900">
                      <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent z-10"></div>
                      
                      <div class="w-full h-full flex items-center justify-center text-gray-500">
                          <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                          </svg>
                      </div>
                      
                      <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  </div> 

                  <div class="p-6 flex flex-col justify-between space-y-4">
                      
                      <div class="space-y-3">
                          <h3 class="text-xl font-bold text-white group-hover:text-blue-300 transition-colors pt-2">
                              {project.title}
                          </h3>

                          <p class="text-gray-300 text-sm leading-relaxed">
                              {project.description}
                          </p>
                      </div>

                      <div class="space-y-4">
                          <div class="flex flex-wrap gap-2">
                              {project.technologies.map((tech) => (
                                  <span class="px-2 py-1 bg-gray-700/50 text-gray-300 text-xs rounded-md border border-gray-600/50 hover:border-blue-500/50 transition-colors">
                                      {tech}
                                  </span>
                              ))}
                          </div>

                          <div class="flex gap-3">
                              <a 
                                  href={project.link} 
                                  class="flex-1 bg-blue-600 hover:bg-blue-500 text-white py-2 px-4 rounded-lg text-center text-sm font-medium transition-colors duration-200 flex items-center justify-center gap-2"
                                  target="_blank"
                                  rel="noopener noreferrer"
                              >
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                  </svg>
                                  Ver Proyecto
                              </a>
                              <a 
                                  href={project.github} 
                                  class="bg-gray-700 hover:bg-gray-600 text-gray-300 py-2 px-4 rounded-lg text-center text-sm font-medium transition-colors duration-200 flex items-center justify-center gap-2"
                                  target="_blank"
                                  rel="noopener noreferrer"
                              >
                                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                      <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                                  </svg>
                                  GitHub
                              </a>
                          </div>
                      </div>
                  </div>
              </div>
          </article>
      ))
  }
  </div>